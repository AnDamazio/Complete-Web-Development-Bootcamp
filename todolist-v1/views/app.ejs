<%- include("header")-%>
    <div class="box" id="heading">

        <% if(listTitle === "Work List") {%>

        <h1 style="color: hsla(0, 0%, 98%, 0.965)">Work List</h1>
        <%}else {%>

            <%  if (day === "Saturday" || day === "Sunday") { %>
                <h1 style="color: purple">It's a <%= day %></h1>
            <%}else {%>
                <h1 style="color: blue">It's a <%= day %></h1>
            <%}%>

        <%}%>

    </div>

    <div class="box">
        <% for(item of newListItems) { %>
        <div class="item">
            <input type="checkbox">
            <p class="p"><%=item%></p>
        </div>
        <%}%>

        <form class="item" action="/"  method="post">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="app" value=<%= listTitle%>>+</button>
        </form>
    </div>
<%- include("footer")-%>
